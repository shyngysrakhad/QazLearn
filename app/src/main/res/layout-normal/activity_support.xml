<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Support"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/holo_orange_light">

        <TextView
            android:onClick="Contactus"
            android:text="@string/contactthedevelopers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvcontacthedev"
            android:layout_weight="2"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginLeft="5dp" />

        <Button
            android:onClick="Contactus"
            android:layout_width="0dp"
            android:background="@drawable/service"
            android:id="@+id/imcontacthedev"
            android:layout_weight="0.94"
            android:layout_marginRight="5dp"
            android:elevation="0dp"
            android:layout_height="120dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_bright">

        <Button
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:id="@+id/imratetheapp"
            android:layout_weight="0.94"
            android:layout_marginLeft="5dp"
            android:background="@drawable/star" />

        <TextView
            android:text="@string/rateanapp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvratetheapp"
            android:layout_weight="2"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/light_blue">
        <TextView
            android:text="@string/sharetheapp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvsharetheapp"
            android:layout_weight="2"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="114dp"
            android:background="@drawable/share"
            android:id="@+id/imsharetheapp"
            android:layout_weight="0.94"
            android:layout_marginRight="5dp" />
    </LinearLayout>
</LinearLayout>
